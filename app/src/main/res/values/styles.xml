<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Preferences screen -->
    <style name="PreferencesTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/cardview_light_background</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:listViewStyle">@style/listViewPrefs</item>
    </style>

    <style name="listViewPrefs" parent="@android:style/Widget.ListView">
        <item name="android:cacheColorHint">@color/primary</item>
        <item name="android:divider">@color/primary</item>
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/margin_16</item>
    </style>

    <style name="SectionTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/title_text_view</item>
        <item name="android:layout_marginLeft">@dimen/margin_4</item>
        <item name="android:layout_marginStart">@dimen/margin_4</item>
        <item name="android:layout_marginTop">@dimen/margin_4</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="TitleTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_4</item>
        <item name="android:layout_marginRight">@dimen/margin_4</item>
        <item name="android:layout_marginStart">@dimen/margin_4</item>
        <item name="android:layout_marginEnd">@dimen/margin_4</item>
        <item name="android:layout_marginTop">@dimen/margin_4</item>
        <item name="android:layout_marginBottom">@dimen/margin_4</item>
        <item name="android:gravity">start</item>
        <item name="android:lines">3</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DateTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginEnd">@dimen/margin_4</item>
        <item name="android:layout_marginRight">@dimen/margin_4</item>
        <item name="android:layout_marginTop">@dimen/margin_4</item>
        <item name="android:layout_toRightOf">@id/section_text_view</item>
        <item name="android:layout_alignBaseline">@id/section_text_view</item>
        <item name="android:layout_alignBottom">@id/section_text_view</item>
        <item name="android:gravity">end</item>
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="TimeTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginEnd">@dimen/margin_4</item>
        <item name="android:layout_marginRight">@dimen/margin_4</item>
        <item name="android:layout_marginTop">@dimen/margin_4</item>
        <item name="android:layout_below">@id/date_text_view</item>
        <item name="android:gravity">end</item>
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

</resources>
